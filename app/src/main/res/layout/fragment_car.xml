<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragments.CarFragment">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Propietario"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:id="@+id/tVcarmodel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tVcarcolor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="CarModel"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/tVcarcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CarColor"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tVcarplaca"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tVcarplaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CarPlaca"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:layout_below="@+id/ivcar"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tVPropier"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="Name Propier"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_below="@+id/ivperfil"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/ivperfil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_account_circle"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/ivcar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_car"
        android:layout_below="@+id/tVPropier"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>